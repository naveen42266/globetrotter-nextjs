{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".next/typescript",
    "baseUrl": ".", // Ensure this is set to the root of your project
    "paths": {
      "@/*": ["src/*"] // Ensure this maps to your source directory
    }
  },
  "include": ["scripts/**/*.ts"]
}